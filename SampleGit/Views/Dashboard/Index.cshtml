@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid p-4 bg-light min-vh-100">

    <h2 class="fw-bold mb-4">Welcome back 💪</h2>

    <div class="row g-4">

        <!-- Card -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 p-3">
                <h6 class="text-muted">Workouts Completed</h6>
                <h2 class="fw-bold">24</h2>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 p-3">
                <h6 class="text-muted">Calories Burned</h6>
                <h2 class="fw-bold">3,420</h2>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 p-3">
                <h6 class="text-muted">Active Days</h6>
                <h2 class="fw-bold">18</h2>
            </div>
        </div>

    </div>

    <!-- Workout section -->
    <div class="mt-5">
        <h4 class="fw-semibold mb-3">Today’s Workout</h4>

        <div class="card shadow-sm border-0 rounded-4 p-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="fw-bold mb-1">Full Body Training</h5>
                    <p class="text-muted mb-0">45 minutes • Strength + Cardio</p>
                </div>

                <button class="btn btn-primary rounded-pill px-4">
                    Start
                </button>
            </div>
        </div>
    </div>

</div>
